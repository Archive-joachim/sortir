{% extends 'base.html.twig' %}

{% block body %}
    <h1>Utilisateur</h1>
    <div>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">prenom</th>
                    <th scope="col">pseudo</th>
                    <th scope="col">eMail</th>
                    <th scope="col">telephone</th>
                    <th scope="col">site</th>
                    <th scope="col">Administrateur</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.Email }}</td>
                    <td>{{ user.telephone }}</td>
                    <td><i>{{ user.site.nom }}</i></td>
                    <td>
                        {% if user.roles[0] == 'ROLE_ADMIN' %}
                            <p>Oui</p>
                        {% else %}
                            <p>Non</p>
                        {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-primary" href="/user/{{ user.id }}">Afficher Profil</a>
                        <a class="btn btn-primary" href="#">Bannir utilisateur</a>
                        <a class="btn btn-primary" href="/admin/gestionUtilisateur/suppr/{{ user.id }}" onclick="return confirm('êtes-vous certain de vouloir supprimer {{ user.nom }} {{ user.prenom }}')">
                            Supprimer utilisateur
                        </a>
                    </td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
            <form action="{{ path('admin_register') }}">
                <input type="submit" class="btn btn-primary" value="Créer un utilisateur">
            </form>
        </div>
{% endblock %}

{% block title %}

{% endblock %}

