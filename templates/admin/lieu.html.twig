{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}
    <h1>LIEU</h1>
    <div>
        <table class="table table-striped table-dark">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">rue</th>
                <th scope="col">ville</th>
                <th scope="col">latitude</th>
                <th scope="col">longitude</th>
            </tr>
            </thead>
            <tbody>
            {% for lieu in lieux %}
            <tr>
                <td>{{ lieu.nom }}</td>
                <td>{{ lieu.rue }}</td>
                <td>{{ lieu.ville.nom }}</td>
                <td>{{ lieu.latitude }}</td>
                <td>{{ lieu.longitude }}</td>
                <td>
                    <a href="#"><input type="button"value="Supprimer lieu"></a>
                </td>
            </tr>
            </tbody>
            {% endfor %}
        </table>
        <form action="{{ path('admin_lieu_add') }}">
            <input type="submit" class="btn btn-primary" value="Ajouter un lieu">
        </form>
    </div>
{% endblock %}

